<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Research Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    .card-hover {
      transition: all 0.3s ease;
    }
    
    .card-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.1), 0 8px 10px -6px rgba(59, 130, 246, 0.1);
    }
    
    .nav-link-hover:hover {
      background: linear-gradient(90deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0) 100%);
      border-left: 3px solid #2563eb;
    }
  </style>
</head>

<body class="bg-gray-50">
  <div class="flex h-screen overflow-hidden relative">
    <!-- Sidebar - kept intact as requested -->
    <aside id="sidebar"
      class="w-64 bg-blue-900 text-white shadow-lg transition-all duration-300 ease-in-out z-40 fixed inset-y-0 left-0 transform -translate-x-full md:translate-x-0 md:relative md:block">
      <div class="p-6 border-b border-blue-800">
        <h2 class="text-xl font-bold tracking-wide">
          Welcome, <%=adminID %>!
        </h2>
        <!-- Close button for mobile -->
        <button id="close-sidebar" class="absolute top-4 right-4 text-white md:hidden">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <nav class="mt-4">
        <ul>
          <li class="mb-1 px-2">
            <a href="/admin" class="flex items-center py-3 px-4 bg-blue-700 text-white rounded-md font-medium">
              <i class="fas fa-home mr-3"></i>
              <span>Dashboard</span>
            </a>
          </li>
          <li class="mb-1 px-2">
            <a href="/admin/control.html"
              class="flex items-center py-3 px-4 text-blue-100 hover:bg-blue-800 rounded-md transition-all duration-200">
              <i class="fas fa-sliders-h mr-3"></i>
              <span>Visibility Controls</span>
            </a>
          </li>
          <li class="mb-1 px-2">
            <a href="/admin/files.html"
              class="flex items-center py-3 px-4 text-blue-100 hover:bg-blue-800 rounded-md transition-all duration-200">
              <i class="fas fa-users mr-3"></i>
              <span>File Upload</span>
            </a>
          </li>
          <li class="mb-1 px-2">
            <a href="/admin/formData"
              class="flex items-center py-3 px-4 text-blue-100 hover:bg-blue-800 rounded-md transition-all duration-200">
              <i class="fas fa-ticket-alt mr-3"></i>
              <span>User Requests</span>
            </a>
          </li>
          <li class="mb-1 px-2">
            <a href="/admin/cvGenerator.html"
              class="flex items-center py-3 px-4 text-blue-100 hover:bg-blue-800 rounded-md transition-all duration-200">
              <i class="fas fa-file-pdf mr-3"></i>
              <span>CV Generator</span>
            </a>
          </li>
          <br>
          <li style="padding-left: 13px; font-size: medium; font-size: 1.1rem;">Account</li>
          <li class="mb-1 px-2">
            <a href="/admin/logout"
              class="flex items-center py-3 px-4 text-blue-100 hover:bg-blue-800 rounded-md transition-all duration-200">
              <i class="fas fa-sign-out-alt mr-3"></i>
              <span>Logout</span>
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Overlay for mobile sidebar -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden md:hidden"></div>

    <!-- Main Content - Enhanced with more elegant styling -->
    <main class="flex-1 overflow-y-auto bg-gradient-to-br from-blue-50 to-gray-50">
      <div class="p-4 md:p-8">
        <!-- Header with mobile menu indicator - Improved styling -->
        <div class="flex justify-between items-center mb-8">
          <div class="flex items-center">
            <button id="mobile-menu-button" class="mr-3 text-gray-700 md:hidden">
              <i class="fas fa-bars text-xl"></i>
            </button>
            <div>
              <h1 class="text-2xl md:text-3xl font-bold text-gray-800 tracking-tight">
                Website Management Dashboard
              </h1>
              <p class="text-blue-600 text-sm mt-1">Manage your research publications and other activities</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <div class="hidden sm:flex items-center bg-white py-2 px-4 shadow-sm rounded-full">
              <i class="fas fa-user-circle text-blue-600 mr-2"></i>
              <span class="text-gray-700 font-medium">Admin</span>
            </div>
            <div
              class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-full flex items-center justify-center text-white font-semibold shadow-md">
              A
            </div>
          </div>
        </div>
       

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
          <!-- Manage Publications Card - Enhanced styling -->
          <div
            class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden transition-all duration-300 card-hover">
            <div class="bg-gradient-to-r from-blue-800 to-blue-700 text-white p-5">
              <h2 class="text-xl font-semibold flex items-center">
                <i class="fas fa-book mr-3 text-2xl"></i>
                Manage Publications
              </h2>
              <p class="text-blue-100 text-sm mt-1">Organize and track all research publications</p>
            </div>
            <div class="p-5">
              <ul class="space-y-1">
                <li>
                  <a href="/admin/publication.html"
                    class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-blue-50 transition-all duration-200 nav-link-hover pl-3">
                    <div class="mr-4 bg-blue-100 text-blue-700 p-2 rounded-lg">
                      <i class="fas fa-file-alt"></i>
                    </div>
                    <div>
                      <p class="font-medium">Journal Publications</p>
                      <p class="text-xs text-gray-500">Manage published research articles</p>
                    </div>
                  </a>
                </li>
                <li>
                  <a href="/admin/conference.html"
                    class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-blue-50 transition-all duration-200 nav-link-hover pl-3">
                    <div class="mr-4 bg-blue-100 text-blue-700 p-2 rounded-lg">
                      <i class="fas fa-microphone"></i>
                    </div>
                    <div>
                      <p class="font-medium">Conference Proceedings</p>
                      <p class="text-xs text-gray-500">Manage conference papers and presentations</p>
                    </div>
                  </a>
                </li>
                <li>
                  <a href="/admin/book.html"
                    class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-blue-50 transition-all duration-200 nav-link-hover pl-3">
                    <div class="mr-4 bg-blue-100 text-blue-700 p-2 rounded-lg">
                      <i class="fas fa-book-open"></i>
                    </div>
                    <div>
                      <p class="font-medium">Books</p>
                      <p class="text-xs text-gray-500">Manage published books and monographs</p>
                    </div>
                  </a>
                </li>
                <li>
                  <a href="/admin/chapters.html"
                    class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-blue-50 transition-all duration-200 nav-link-hover pl-3">
                    <div class="mr-4 bg-blue-100 text-blue-700 p-2 rounded-lg">
                      <i class="fas fa-bookmark"></i>
                    </div>
                    <div>
                      <p class="font-medium">Chapters</p>
                      <p class="text-xs text-gray-500">Manage contributed book chapters</p>
                    </div>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <!-- Manage Others Card - Enhanced styling -->
          <div
            class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden transition-all duration-300 card-hover">
            <div class="bg-gradient-to-r from-blue-800 to-blue-700 text-white p-5">
              <h2 class="text-xl font-semibold flex items-center">
                <i class="fas fa-project-diagram mr-3 text-2xl"></i>
                Manage Others
              </h2>
              <p class="text-blue-100 text-sm mt-1">Organize additional research activities</p>
            </div>
            <div class="p-5">
              <div class="grid grid-cols-2 gap-3">
                <a href="/admin/projects.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-flask text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Projects</h3>
                  <p class="text-xs text-gray-500 mt-1">Research projects management</p>
                </a>
                <a href="/admin/patents.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-file-signature text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Patents</h3>
                  <p class="text-xs text-gray-500 mt-1">Patent applications and grants</p>
                </a>
                <a href="/admin/dissertations.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-user-graduate text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Dissertations</h3>
                  <p class="text-xs text-gray-500 mt-1">Supervised student research</p>
                </a>
                <a href="/admin/files.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-file text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Files</h3>
                  <p class="text-xs text-gray-500 mt-1">Document management</p>
                </a>
                <a href="/admin/researchMembers.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-users text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Members</h3>
                  <p class="text-xs text-gray-500 mt-1">Research team management</p>
                </a>
                <a href="/admin/extension.html"
                  class="block p-4 rounded-lg bg-white hover:bg-blue-50 shadow-sm border border-gray-100 transition-all duration-200">
                  <i class="fas fa-calendar-alt text-lg text-blue-700 mb-2"></i>
                  <h3 class="font-medium text-gray-800">Extensions</h3>
                  <p class="text-xs text-gray-500 mt-1">Extension activities</p>
                </a>
              </div>
              <a href="/admin/eResources.html"
                class="flex items-center p-3 mt-3 rounded-lg text-gray-700 hover:bg-blue-50 transition-all duration-200 nav-link-hover pl-3">
                <div class="mr-4 bg-blue-100 text-blue-700 p-2 rounded-lg">
                  <i class="fas fa-file-alt"></i>
                </div>
                <div>
                  <p class="font-medium">eResources</p>
                  <p class="text-xs text-gray-500">Manage digital research resources</p>
                </div>
              </a>
            </div>
          </div>
        </div>
    
      </div>
    </main>
  </div>

  <!-- Floating action button for mobile -->
  <button id="mobile-fab"
    class="md:hidden fixed bottom-6 right-6 bg-gradient-to-r from-blue-700 to-blue-600 text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg z-30">
    <i class="fas fa-plus"></i>
  </button>

  <script>
    // Mobile menu toggle functionality
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const closeSidebarButton = document.getElementById("close-sidebar");
    const sidebar = document.getElementById("sidebar");
    const sidebarOverlay = document.getElementById("sidebar-overlay");
    const mobileFab = document.getElementById("mobile-fab");

    // Function to open sidebar
    function openSidebar() {
      sidebar.classList.remove("-translate-x-full");
      sidebarOverlay.classList.remove("hidden");
      document.body.classList.add("overflow-hidden");
    }

    // Function to close sidebar
    function closeSidebar() {
      sidebar.classList.add("-translate-x-full");
      sidebarOverlay.classList.add("hidden");
      document.body.classList.remove("overflow-hidden");
    }

    // Event listeners
    if (mobileMenuButton) {
      mobileMenuButton.addEventListener("click", openSidebar);
    }

    if (closeSidebarButton) {
      closeSidebarButton.addEventListener("click", closeSidebar);
    }

    if (sidebarOverlay) {
      sidebarOverlay.addEventListener("click", closeSidebar);
    }

    // Optional: Close sidebar when clicking on a menu item on mobile
    const sidebarLinks = sidebar.querySelectorAll("a");
    sidebarLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (window.innerWidth < 768) {
          // Only on mobile
          closeSidebar();
        }
      });
    });

    // Optional: Toggle floating action button
    if (mobileFab) {
      mobileFab.addEventListener("click", () => {
        // Add your action for the floating button here
        // This could open a menu, add a new item, etc.
      });
    }

    // Handle resize events - ensure sidebar is visible on desktop
    window.addEventListener("resize", () => {
      if (window.innerWidth >= 768) {
        // md breakpoint
        sidebar.classList.remove("-translate-x-full");
        sidebarOverlay.classList.add("hidden");
        document.body.classList.remove("overflow-hidden");
      } else {
        sidebar.classList.add("-translate-x-full");
      }
    });

    // Load file count
    async function loadFileCount() {
      try {
        const response = await fetch('/api/files');
        const files = await response.json();
        const fileCount = document.getElementById('fileCount');
        if (fileCount) {
          fileCount.textContent = files.length;
        }
      } catch (error) {
        console.error('Error loading file count:', error);
      }
    }

    // Load file count on page load
    document.addEventListener('DOMContentLoaded', loadFileCount);
  </script>
</body>

</html>