      // Function to filter and display technology cards
      function filterTechCards() {
        const container = document.getElementById("tech-container");
        container.innerHTML = ""; // Clear existing cards

        // Get all active filters
        const activeFilters = Array.from(document.querySelectorAll(".filter-tag.active"))
          .map((tag) => tag.getAttribute("data-filter"))
          .filter((filter) => filter !== "all"); // Exclude 'all' from specific filters

        // Check if "All" button is active or no filters are selected
        const showAll = document.querySelector('.filter-tag[data-filter="all"].active') !== null || activeFilters.length === 0;

        technologies.forEach((tech, index) => {
          // Show all cards if "All" is selected or no filters are active
          if (showAll) {
            createCard(tech, container, index);
            return;
          }

          // Check if the tech has at least one of the active filters
          const matchesFilter = activeFilters.every((filter) => tech.tags.includes(filter));
          if (matchesFilter) {
            createCard(tech, container, index);
          }
        });
      }

      // Helper function to create a card
      function createCard(tech, container, index) {
        const card = document.createElement("div");
        card.className = "tech-card";
        card.setAttribute("data-tags", tech.tags.join(" "));
        card.setAttribute("itemscope", "");
        card.setAttribute("itemtype", "https://schema.org/Product");
        card.setAttribute("role", "listitem");
        card.setAttribute("aria-label", tech.title);

        // Add structured data for the product
        const productSchema = {
          "@context": "https://schema.org",
          "@type": "Product",
          "name": tech.title,
          "description": tech.description,
          "image": tech.imageUrl,
          "offers": {
            "@type": "Offer",
            "availability": "https://schema.org/InStock",
            "price": "0",
            "priceCurrency": "INR"
          },
          "brand": {
            "@type": "Brand",
            "name": "Sustainable Construction Lab"
          },
          "category": "Construction Technology"
        };

        // Add the schema as a script tag
        const script = document.createElement('script');
        script.type = 'application/ld+json';
        script.setAttribute('data-product', 'true');
        script.text = JSON.stringify(productSchema);
        card.appendChild(script);

        card.innerHTML = `
      <div class="tech-image">
        <img src="${tech.imageUrl}" alt="${tech.title}" itemprop="image">
      </div>
      <div class="tech-content">
        <h3 itemprop="name">${tech.title}</h3>
        <p itemprop="description">${tech.description}</p>
        <div class="card-tags" role="list">
          ${tech.tags.map((tag) => `<span class="card-tag" role="listitem">${tag}</span>`).join("")}
        </div>
      </div>
    `;

        container.appendChild(card);
      }

      // Initialize the page
      document.addEventListener("DOMContentLoaded", function () {
        // Initial load of all cards
        filterTechCards();

        // Update the ItemList structured data
        updateItemListSchema();

        // Set up filter buttons - allowing multiple selection
        const filterButtons = document.querySelectorAll(".filter-tag");
        filterButtons.forEach((button) => {
          button.addEventListener("click", function () {
            const filter = this.getAttribute("data-filter");
            const isActive = this.classList.contains("active");

            // Special handling for "All" button
            if (filter === "all") {
              // Deactivate all other filters when "All" is clicked
              filterButtons.forEach((btn) => {
                btn.classList.remove("active");
                btn.setAttribute("aria-pressed", "false");
              });
              this.classList.add("active");
              this.setAttribute("aria-pressed", "true");
            } else {
              // If clicking a specific filter, deactivate "All"
              document.querySelector('.filter-tag[data-filter="all"]').classList.remove("active");
              document.querySelector('.filter-tag[data-filter="all"]').setAttribute("aria-pressed", "false");

              // Toggle active state for clicked filter
              this.classList.toggle("active");
              this.setAttribute("aria-pressed", !isActive);
            }

            // Update displayed cards
            filterTechCards();
            // Update the ItemList structured data
            updateItemListSchema();
          });
        });

        // Clear filters button
        document.getElementById("clear-filters").addEventListener("click", function () {
          // Reset to only "All" being active
          filterButtons.forEach((btn) => {
            btn.classList.remove("active");
            btn.setAttribute("aria-pressed", "false");
          });
          document.querySelector('.filter-tag[data-filter="all"]').classList.add("active");
          document.querySelector('.filter-tag[data-filter="all"]').setAttribute("aria-pressed", "true");

          // Update displayed cards
          filterTechCards();
          // Update the ItemList structured data
          updateItemListSchema();
        });

        // Theme toggle functionality (if needed)
        const themeSwitch = document.querySelector(".theme-switch input");
        if (themeSwitch) {
          themeSwitch.addEventListener("change", function (e) {
            if (e.target.checked) {
              document.documentElement.setAttribute("data-theme", "light");
            } else {
              document.documentElement.setAttribute("data-theme", "dark");
            }
          });
        }
      });

      // Function to update the ItemList structured data
      function updateItemListSchema() {
        // Get all active filters
        const activeFilters = Array.from(document.querySelectorAll(".filter-tag.active"))
          .map((tag) => tag.getAttribute("data-filter"))
          .filter((filter) => filter !== "all"); // Exclude 'all' from specific filters

        // Check if "All" button is active or no filters are selected
        const showAll = document.querySelector('.filter-tag[data-filter="all"].active') !== null || activeFilters.length === 0;

        // Filter technologies based on active filters
        const filteredTechnologies = showAll
          ? technologies
          : technologies.filter(tech => activeFilters.every(filter => tech.tags.includes(filter)));

        // Create the itemListElement array
        const itemListElements = filteredTechnologies.map((tech, index) => ({
          "@type": "ListItem",
          "position": index + 1,
          "item": {
            "@type": "Product",
            "name": tech.title,
            "description": tech.description,
            "image": tech.imageUrl
          }
        }));

        // Update the ItemList structured data
        const itemListSchema = {
          "@context": "https://schema.org",
          "@type": "ItemList",
          "name": "Key Technologies by SCORE Research Group",
          "description": "Explore our cutting-edge technologies that drive innovation and excellence in the industry.",
          "itemListElement": itemListElements
        };

        // Find and update the ItemList script tag
        const itemListScript = document.querySelector('script[type="application/ld+json"]:not([data-product])');
        if (itemListScript) {
          itemListScript.textContent = JSON.stringify(itemListSchema);
        }
      }

    </script>
